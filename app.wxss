/**app.wxss**/

.bgColor {
  background: #dfefea;
  height: 100vh;
}

button {
  padding: 0;
  color: none;
  background-color: transparent;
  line-height: normal;
  border-radius: 0;
}

.btn-hover {
  color: none;
  background-color: transparent;
}

button::after {
  border: none;
}

input {
  outline: none;
  border: none;
  list-style: none;
}

textarea{
  width: 100%;
}

.hideButton {
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0;
  width: 100%;
  height: 100%;
}

.modalWrapper {
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background-color: rgba(51, 51, 51, 0.4);
  z-index: 990;
}

.modalBox {
  position: relative;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  background: #fff;
  border-radius: 10rpx;
  min-height: 612rpx;
  text-align: center;
}

.view_inline {
  display: inline-block;
}

.cat_buttom {
  width: 100%;
  height: 150rpx;
  position: fixed;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 绿色的点击按钮 begin */

.careBtn {
  width: 666rpx;
  height: 98rpx;
  line-height: 98rpx;
  background: #57d2a9;
  border-radius: 49rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: #fff;
  text-align: center;
}

/* 绿色的点击按钮 end */

/* 灰色的点击按钮 begin */
.careBtn.grey{
  background:#D1D1D1;
}
/* 灰色的点击按钮 end */

/* modal 的代码 beigin */

.copyModal {
  width: 580rpx;
  height: 612rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #282828;
  box-shadow: 0px 7px 14px 0px rgba(0, 0, 0, 0.14);
}

.modal_close {
  text-align: right;
  padding-top: 21rpx;
  padding-right: 21rpx;
}

.modal_close .closeBtn {
  width: 48rpx;
  height: 48rpx;
}

.modal_title {
  font-size: 28rpx;
  padding-top: 60rpx;
}

.modal_content {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 42rpx;
  padding-bottom: 131rpx;
}

.modal_content .wechat_img {
  width: 58rpx;
  height: 58rpx;
  vertical-align: middlel;
  margin-top: 12rpx;
}

.modal_content .wechat_num {
  font-size: 36rpx;
  margin-left: 20rpx;
}

/* modal 的代码 end */

/* 绿色的点击按钮 如复制微信号 beigin */

.copy_btn {
  width: 360rpx;
  height: 87rpx;
  line-height: 87rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  background: #57d2a9;
  border-radius: 44rpx;
  margin: 0 auto;
}

/* 绿色的点击按钮 如复制微信号 end */

/* 有绿色底部的title 查看详情 begin  */

.cat_title {
  margin-bottom: 20rpx;
  position: relative;
  height: 49rpx;
  line-height: 49rpx;
}

.cat_title .nickname {
  color: #282828;
  font-size: 40rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  margin-right: 20rpx;
}

.cat_title .line {
  position: absolute;
  left: 4rpx;
  top: 38rpx;
  height: 8rpx;
  width: 136rpx;
  background: rgba(60, 203, 155, 0.4);
}

/* 有绿色底部的title 查看详情 end  */

/* 猫咪详情展示 begin 如首页*/

.list_item {
  display: flex;
  justify-items: baseline;
  padding: 40rpx 0;
  margin: 0 auto;
  border-bottom: 1px solid #e9e9e9;
}

.list_item .cat_img {
  width: 168rpx;
  height: 168rpx;
  border-radius: 8rpx;
}

.list_item_right {
  margin-left: 32rpx;
  flex: auto;
  display: flex;
  flex-direction: column;
}

.list_item_right .top {
  height: 52rpx;
  flex: auto;
}

.list_item_right .name {
  color: #282828;
  font-size: 40rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  margin-right: 24rpx;
}

.list_item_right .sex {
  font-size: 30rpx;
  color: #b6b6b6;
  display: inline-block;
}

.list_item .sexImg {
  width: 26rpx;
  height: 26rpx;
}

.list_item .sexName {
  padding-right: 16rpx;
  padding-left: 8rpx;
}

.list_item_right .tags {
  height: 72rpx;
  flex: auto;
}

.list_item_right .tag {
  display: inline-block;
  opacity: 0.7;
  color: #fff;
  height: 34rpx;
  line-height: 34rpx;
  text-align: center;
  padding: 0 16rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  border-radius: 32rpx;
  margin-right: 12rpx;
}

.list_item_right .address {
  flex: auto;
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #333;
  padding-top: 4rpx;
}

/* 猫咪详情展示 end*/

