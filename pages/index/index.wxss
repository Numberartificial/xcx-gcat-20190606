/**index.wxss**/

.page_list{
  padding: 0 40rpx;
}

.list_item{
  display: flex;
  justify-items: baseline;
  padding:40rpx 0;
  margin: 0 auto;
  border-bottom: 1px solid #E9E9E9;
}

.cat_img{
  width:168rpx;
  height:168rpx;
  border-radius:8rpx;
}
.list_item_right{
  display: flex;
  flex-direction: column;
  margin-left: 28rpx;
  flex: auto;
}

.list_item_right>view{
  flex: auto;
}
.list_item_right .name{
  color: #282828;
  font-size:36rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  padding-top:-2rpx;

}
.list_item_right .sex{
  font-size:26rpx;
  color: #B6B6B6;
}
.sexImg{
  width: 20rpx;
  height: 20rpx;
  vertical-align: middle;
}
.sexName{
  flex: none;
  padding-right: 16rpx;
  padding-left: 4rpx;
}

.list_item_right .tags{
  display:flex;
  align-items: center;
  height: 40rpx;

}
.list_item_right .tag{
  display: inline-block;
  opacity: 0.7;
  color: #fff;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  padding:0 16rpx;
  font-size:20rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  border-radius:32rpx;
  margin-right: 8rpx;

}
.list_item_right .address{
  font-size:26rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color: #333333;
  padding-top: 4rpx;
}