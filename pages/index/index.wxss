/**index.wxss**/

.page_list {
  padding: 0 40rpx;
}

.list_item {
  display: flex;
  justify-items: baseline;
  padding: 40rpx 0;
  margin: 0 auto;
  border-bottom: 1px solid #e9e9e9;
}

.list_item:first-child {
  border-top: 1px solid #e9e9e9;
}

.cat_img {
  width: 168rpx;
  height: 168rpx;
  border-radius: 8rpx;
}

.list_item_right {
  margin-left: 32rpx;
  flex: auto;
  display: flex;
  flex-direction: column;
}

.list_item_right .top {
  height: 52rpx;
  flex: auto;
}

.list_item_right .name {
  color: #282828;
  font-size: 40rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  margin-right: 24rpx;
}

.list_item_right .sex {
  font-size: 30rpx;
  color: #b6b6b6;
  display: inline-block;
}

.sexImg {
  width: 26rpx;
  height: 26rpx;
}

.sexName {
  padding-right: 16rpx;
  padding-left: 8rpx;
}

.list_item_right .tags {
  height: 72rpx;
  flex: auto;
}

.list_item_right .tag {
  display: inline-block;
  opacity: 0.7;
  color: #fff;
  height: 34rpx;
  line-height: 34rpx;
  text-align: center;
  padding: 0 16rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  border-radius: 32rpx;
  margin-right: 12rpx;
}

.list_item_right .address {
  flex: auto;
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #333;
  padding-top: 4rpx;
}

.home_banner {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #525252;
  position: relative;
  margin-bottom: 40rpx;
}

.home_banner .banner_img {
  width: 750rpx;
  height: 404rpx;
}

.banner_content {
  position: absolute;
  width: 100%;
  text-align: center;
  left: 0;
  top: 60rpx;
}

.bannner_btn_view {
  position: relative;
  margin-top:82rpx;
  margin-bottom: 20rpx;

}

.btn_content{
  width: 560rpx;
  position: absolute;
  left: 50%;
  top: 16rpx;
  transform: translate(-50%);
}

.bannner_btn{
   width: 560rpx;
  height: 98rpx;
}

.bannner_btn_txt {
  font-size: 30rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: #fff;
  
}

.banner_icon {
  width: 70rpx;
  height: 70rpx;
  margin-left: 40rpx;
  vertical-align: middle;
}

.cat_num_item {
  margin-top: 20rpx;
}

.cat_num {
  color: #282828;
  font-size: 46rpx;
  font-family: DINAlternate-Bold;
  font-weight: bold;
  line-height: 53rpx;
  margin-right: 4rpx;
}

.person_num {
  color: #3ccb9b;
}
