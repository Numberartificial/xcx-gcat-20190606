<!--index.wxml-->
<view class="container">
  <swiper autoplay indicator-dots indicator-color='rgba(255,255,255 .4)' indicator-active-color='#fff'>
   <block wx:for="{{headerImgUrls}}">
    <swiper-item>
      <image src="{{item}}" class="slide-image" width="750" height="270"/>
    </swiper-item>
  </block>
  </swiper>

  <view class='page_list'>
    <view class='list_item' wx:for='{{pageList}}' data-id='{{item.id}}' catchtap='goDetail'>
     <image class='cat_img' src='{{item.img}}'></image>
     <view class='list_item_right'>
      <view class='name'>{{item.name}}</view>
      <view class='sex'>
        <image class='sexImg' src='{{item.sex==1?"/images/boy.png":item.sex==2?"/images/gril.png":"/images/cat_icon.png"}}'></image>
        <text class='sexName'>{{item.sex==1?'男孩':item.sex==2?'女孩':'未知'}}</text>
        <text class='age'>{{item.age}}</text>
      </view>
      <view>
        <text class='tag' wx:for='{{item.tags}}' wx:for-item="items" style="background:{{items.color}}">{{items.tag}}</text>
      </view>
      <view class='address'>
        {{item.province}} {{item.city}} {{item.region}} 
      </view>

     </view>

    </view>
  </view>


</view>
 