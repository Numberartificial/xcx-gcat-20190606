/* pages/details/index.wxss */
.detail_wrapper{
  padding-bottom: 150rpx;
}
.careBtn {
  position: fixed;
  left: 50%;
  bottom: 41rpx;
  transform: translateX(-50%);
  width: 666rpx;
  height: 98rpx;
  line-height: 98rpx;
  background: #57d2a9;
  border-radius: 49rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: #fff;
  text-align: center;
}

.detail_content {
  padding: 30rpx 40rpx;
  overflow: auto;
}

.row {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #333;
  padding-bottom: 4rpx;
}
.row text {
  margin-left: 10rpx;
}

.row_1 {
   display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #b6b6b6;
  padding-bottom: 6rpx;
}

.cat_info {
  padding-bottom: 51rpx;
  border-bottom: 1rpx solid #e9e9e9;
}

.nickname {
  color: #282828;
  font-size: 36rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  margin-right: 20rpx;
}

.sexImg {
  width: 20rpx;
  height: 20rpx;
  vertical-align: middle;
}

.sexName {
  padding-right: 16rpx;
  padding-left: 4rpx;
}

.icon_img {
  width: 26rpx;
  height: 26rpx;
  vertical-align: middle;
}


.row .tag {
  display: inline-block;
  opacity: 0.7;
  color: #fff;
  height: 30rpx;
  line-height: 30rpx;
  text-align: center;
  padding: 0 16rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  border-radius: 32rpx;
  margin-right: 8rpx;
  margin-top: 16rpx;
}

.cat_story {
  margin-top: 50rpx;
  margin-bottom: 60rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #282828;
}

.cat_title {
  display: inline-block;
  border-bottom: 8rpx solid rgba(60, 203, 155, 0.4);
  margin-bottom: 20rpx;
}

.copyModal{
  width:580rpx;
  height:612rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color: #282828;
  box-shadow:0px 7px 14px 0px rgba(0,0,0,0.14);
}

.modal_close{
  text-align: right;
  padding-top: 21rpx;
  padding-right: 21rpx;
}
.modal_close .closeBtn{
  width:48rpx;
  height:48rpx;
}
.modal_title{
  font-size:28rpx;
  padding-top: 60rpx;
}
.modal_content{
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 42rpx;
  padding-bottom: 131rpx;

}
.modal_content .wechat_img{
  width: 39rpx;
  height: 39rpx;
  vertical-align: middlel;
  margin-top:12rpx;

}

.modal_content .wechat_num{
  font-size:36rpx;
  margin-left: 20rpx;
}

.copyModal .copy_btn{
  width:360rpx;
  height:87rpx;
  line-height: 87rpx;
  text-align: center;
  font-size:32rpx;
  color: #fff;
  background:#57D2A9;
  border-radius:44rpx;
  margin: 0 auto;
}
