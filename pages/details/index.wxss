/* pages/details/index.wxss */
.detail_wrapper{
  padding-bottom: 150rpx;
}


.detail_content {
  padding: 30rpx 40rpx;
  overflow: auto;
}

.cat_buttom{
  background: #fff;
}
.row {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-wrap: wrap;
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #333;
  line-height:60rpx;
}
.row text {
  margin-left: 10rpx;
}

.row_1 {
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #3CCB9B;
  padding-bottom: 20rpx;
}
.tag_row{
  line-height:0;
  margin-top: 20rpx;
}

.cat_info {
  padding-bottom: 53rpx;
  border-bottom: 1px solid #e9e9e9;
  display: flex;
  flex-direction: column;
}
.cat_info>view{
  flex: auto;
}
.nickname {
  color: #282828;
  font-size: 40rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  margin-right: 20rpx;
}

.sexImg {
  width: 26rpx;
  height: 26rpx;
}

.sexName {
  padding-right: 16rpx;
  padding-left: 8rpx;
}

.icon_img {
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
}


.row .tag {
  display: inline-block;
  opacity: 0.7;
  color: #fff;
  height: 34rpx;
  line-height: 34rpx;
  text-align: center;
  padding: 0 16rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  border-radius: 32rpx;
  margin-right: 10rpx;
  margin-top: 16rpx;
}

.cat_story {
  margin-top: 50rpx;
  margin-bottom: 60rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #282828;
}



.cat_story_content{
  line-height: 42rpx;
  padding-left: 10rpx;
}

.detail_wrapper .modal_content{
  padding-top:80rpx;
}


